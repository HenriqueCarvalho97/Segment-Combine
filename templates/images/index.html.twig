{% extends 'base.html.twig' %}

{% block title %}Alterar Imagens da Casa{% endblock %}

{% block additionalStylesheets %}
    <link rel="stylesheet" href="{{ asset('css/backend.css') }}">
    <link rel="stylesheet" href="{{ asset('css/images.css') }}">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
{% endblock %}

{% block body %}

    {% block navbar %}{% endblock%}

    {% block backendnavbar %}
        {{ include('backend/navbar.html.twig',{'return':'backend'}) }}
    {% endblock %}

    <div class="container">

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-5 montserrat">
                {{ message }}
            </div>
        {% endfor %}

        <div class="row">
        {% for image in images %}
            <div class="d-inline-flex position-relative col-sm-4 my-image">
                <img src="{{ asset('img/house-images/' ~ house.id ~ '/' ~ image.name) }}" alt="">
                <a href="{{ path("delete_image",{"image":image.name}) }}" class="position-absolute delete-image d-flex">
                    <i class="fas fa-times" style="margin: auto; color: #888"></i>
                </a>
            </div>
        {% endfor %}
            <a href="{{ path("image_form",{"slug":house.slug}) }}" class="d-inline-flex col-sm-4 my-image add-image">
                <div class="d-flex" style="height: 100%; width: 100%; background: #ddd">
                    <i class="fas fa-plus" style="margin: auto; color: #888; font-size: 30px"></i>
                </div>
            </a>
        </div>
    </div>
{% endblock %}

{% block additionalJavascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
{% endblock %}