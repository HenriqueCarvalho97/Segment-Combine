{% if myValue is divisible by(2)%}
    <div class="row container-search w-100" style="padding-bottom: 150px; flex-direction: row-reverse;">
{% else %}
    <div class="row container-search w-100" style=" padding-bottom: 150px;">
{% endif %}
    <div class="col-md-5 col-sm-12 px-5 d-flex flex-column position-relative search-description fadein">
        <p class="text-gray montserrat letter-space1">{{ house.netArea}} m<sup>2</sup></p>
        <p class="house-name text-green bodoni letter-space1">{{ house.name | upper}}</p>
        <a href="{{ path('house',{'slug':city, 'type': type, 'housename': house.slug}) }}" style="text-decoration: none!important;" class="house-explore text-green montserrat letter-space2 ">{{ "Explorar" | upper }}</a>
    </div>
    <div class="col-md-7 fadein" style="min-height: 300px">
        <div style="height: 100%; width: 100%; padding: 0; overflow: hidden;" >
            <div class="house-image" style="background: url({{ asset('img/houses/' ~ house.mainImage) }}); background-size: cover; width: 100%; height: 100%"></div>
        </div>

    </div>
</div>